{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2016", "es2017"],
    "strict": false,
    "outDir": "build",
    "sourceMap": false,
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["./src/**/*.*", "./test/**/*.*"],
  "exclude": ["node_modules"],
}
